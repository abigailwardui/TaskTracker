@model WebApplication1.Models.ViewModels.ListViewModel

<div class="row" style="display:flex; justify-content:stretch;">
    <div>
        <form asp-action="AddList" id="form-action" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h6>Create New List</h6>
            <div class="form-group" style="display: flex; align-items: center">
                <input asp-for="ListName" class="form-control" style="border-bottom-right-radius: 0px; border-top-right-radius: 0px;" value="" /> <!-- Set value to empty string -->
                <span asp-validation-for="ListName" class="text-danger"></span>
                <input type="submit" id="form-button" value="+" class="btn btn-primary" style="text-align: center; border-bottom-left-radius: 0px; border-top-left-radius: 0px;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}